<h3>
  Estimate Value
</h3>

<table class="table table-sortable table-unable-to-estimate-tickets">
  <thead>
    <tr>
      <th class="ticket-effort sort-desc">Summary</th>
      <td></td>
    </tr>
  </thead>
  <tbody id="tickets">
    {{#tickets}}
      <tr class="ticket" data-ticket-id="{{id}}">
        <td class="ticket-summary">{{summary}} <a href="/tickets/{{id}}.json" class="ticket-details" tabindex="-1">more</a></td>
        <td class="ticket-command">
          <button tabindex="-1" class="btn btn-success btn-can-estimate">Can Estimate!</button>
        </td>
      </tr>
    {{/tickets}}
  </tbody>
</table>
