<div class="modal hide fade wide-modal">
  <form id="new_ticket_form">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Add ticket</h3>
    </div>
    <div class="modal-body">
      <div class="controls row-fluid">
        <label class="span9" for="ticket_sumary">Summary</label>
        <label class="span3" for="ticket_type">Type</label>
      </div>
      <div class="controls row-fluid">
        <input class="span9" id="ticket_sumary" name="ticket[summary]" type="text" />
        <select class="span3" id="ticket_type" name="ticket[type]">
          <option>Feature</option>
          <option>Bug</option>
          <option>Tweak</option>
          <option>Chore</option>
        </select>
      </div>
      
      <div class="controls row-fluid">
        <span class="span6"><label for="ticket_description">Description</label></span>
        <span class="span6"><label for="ticket_description">Preview</label></span>
      </div>
      <div class="controls row-fluid">
        <span class="span6">
          <textarea class="span6" id="ticket_description" name="ticket[description]"></textarea>
        </span>
        <span class="span6">
          <div id="ticket_description_preview"></div>
        </span>
      </div>
    </div>
    <div class="modal-footer">
      <a data-dismiss="modal" class="btn">Close</a>
      <button type="submit" class="btn btn-primary">Create ticket</button>
    </div>
  </form>
</div>
